<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/opencv_camera_preview"
        android:layout_width="306dp"
        android:layout_height="178dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="409dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/croppedFace"
        android:textSize="24dp"
        android:textColor= "@color/colorBlack"
        android:layout_marginLeft="320dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edgeDetect"
        android:textSize="24dp"
        android:textColor= "@color/colorBlack"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="320dp" />

    <TextView
        android:id="@+id/resultThreat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tempResult"
        android:textSize="24dp"
        android:textColor= "@color/colorBlack"
        android:layout_alignParentBottom="true" />


    <ImageView
        android:id="@+id/cropFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/edgeResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="200dp"/>

    <Button
        android:id="@+id/controlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:width="130dp"
        android:height="60dp"
        android:text="@string/control_button" />

    <Button
        android:id="@+id/identifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:width="130dp"
        android:height="60dp"
        android:text="Identify" />

    <Button
        android:id="@+id/edgeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:width="130dp"
        android:height="60dp"
        android:text="Edge Detect" />

    <TextView
        android:id="@+id/labelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="150dp"
        android:text="Labeled Person: None"
        android:textSize="20dp"
        ></TextView>


</RelativeLayout>
